<Page x:Class="DemoProb.Pages.ClientViewService"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoProb.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="900"
      Title="ClientViewService">

    <Grid Background="#ffffff">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10 0" FontSize="48">Учебные услуги</TextBlock>
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" Grid.Row="1">
                <WrapPanel Name ="ClientServiceWpar" HorizontalAlignment="Center" ItemHeight="230" ItemWidth="680"/>
            </ScrollViewer>
            <StackPanel Grid.Row="2">
                <Button Margin="10" Style="{DynamicResource StyledButton}" Click="Button_Click_GoBack">Назад</Button>
            <Button Margin="10" Style="{DynamicResource StyledButton}" Click="Button_Click_ViewService">Просмотр записей</Button>
            </StackPanel>
    </Grid>
</Page>
